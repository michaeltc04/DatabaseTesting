<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.YeastSelectionFragment" >

    <Button
        android:id="@+id/button_yeast_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/next"/>

    <Spinner
        android:id="@+id/spinner_yeast_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_yeast_selection"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_yeast_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spinner_yeast_selection"
        android:text="Select your yeast:" />


</RelativeLayout>
